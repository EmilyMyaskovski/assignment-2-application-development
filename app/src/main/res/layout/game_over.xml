<!-- res/layout/game_over_dialog.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="@drawable/award">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/game_over_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:text="Game Over! ðŸ˜­"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/score_LBL_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/game_over_text"
        android:textSize="43sp"
        tools:text="Score-\n1000"
        android:gravity="center"
        android:layout_margin="60dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
        <EditText
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your name: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="110dp"
            android:inputType="textPersonName|textCapWords"
            />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/to_score_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Score Table"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/send_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/player_name"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        />

</RelativeLayout>